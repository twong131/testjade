    <script>
        // Load links from the JSON file
        fetch('links.json')
            .then(response => response.json())
            .then(data => {
                // Use 'data' to populate your links on the page
                // ...
            })
            .catch(error => console.error('Error loading links:', error));

        // Function to save links to the JSON file
        function saveLinksToJSON(links) {
            fetch('links.json', {
                method: 'PUT', // Use 'PUT' to update the file
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(links),
            })
            .then(response => {
                if (response.ok) {
                    console.log('Links saved successfully.');
                } else {
                    console.error('Error saving links:', response.statusText);
                }
            })
            .catch(error => console.error('Error saving links:', error));
        }

